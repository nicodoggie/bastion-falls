{
  "name": "@nicodoggie/bastion-falls",
  "private": true,
  "scripts": {
    "dev": "zola-bin serve --fast",
    "dev:container": "zola-bin serve --interface 0.0.0.0 --port 8000",
    "dev:codespace": "zola-bin serve --fast --interface 0.0.0.0 --port 8000 --base-url / --no-port-append",
    "build": "zola-bin build",
    "serve": "concurrently \"pnpm family\" \"pnpm dev\"",
    "deploy": "wrangler pages deploy public --project-name bastion-falls",
    "family": "./kingraph.cjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nicodoggie/bf-repo-tools": "workspace:*",
    "@nicodoggie/kingraph": "^0.3.0",
    "@types/nodemon": "^1.19.2",
    "concurrently": "^8.0.1",
    "js-sha256": "^0.11.0",
    "lefthook": "^1.6.10",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.1",
    "wrangler": "^3.53.0",
    "yarpm": "^1.2.0",
    "zola-bin": "^0.3.7"
  },
  "volta": {
    "node": "20.11.1",
    "pnpm": "9.0.6"
  }
}